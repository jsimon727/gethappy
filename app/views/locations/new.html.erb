<body class = "locationform" style= "background: url('https://s3.amazonaws.com/uploads.hipchat.com/39979/609447/xqs7XfX7tB87Moz/brickwall.png'); background-size: cover; background-repeat: no-repeat;" >

<%= form_for [@user, @location], :url => "/users/#{params[:user_id]}/locations" do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.submit %>
<% end %>

</body>